<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI" xmlns:viewModel="clr-namespace:UI.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        MinHeight="578" MinWidth="1024"
        Background="#131313"
        WindowStyle="None"
        AllowsTransparency="True"
        >

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="5"
                      CornerRadius="10"
                      GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border 
            >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <!-- Top control -->
            <Border Grid.ColumnSpan="2"
                Background="#252525"
                MouseDown="Border_MouseDown"
                >

                <Grid HorizontalAlignment="Stretch"
                  VerticalAlignment="Center">

                    <Label Content="PoddApp" 
                       FontWeight="SemiBold"
                       VerticalContentAlignment="center"
                       />

                    <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            >

                        <Button Width="20"
                            Height="20"
                            Content="🗕"
                            FontSize="13"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#e8e6e6"
                            Click="ButtonMinimize_Click"
                            Padding="0,0,0,3"
                            Margin="0,0,8,0"
                            />

                        <Button Width="20"
                            Height="20"
                            Content="☐"
                            FontSize="14"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="0,0,8,0"
                            Foreground="#e8e6e6"
                            Click="ButtonMaximize_Click"
                            />
                        <Button Width="20"
                            Height="20"
                            Content="✕"
                            FontSize="14"
                            Margin="0,0,8,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#e8e6e6"
                            Click="ButtonClose_Click"
                            />

                    </StackPanel>

                </Grid>
            </Border>

            <!-- Side bar -->
            <Grid Grid.Row="1"
                Grid.RowSpan="2"
                Background="#0F0F0F">

                <StackPanel>
                    <RadioButton Content="Home"
                         Height="50"
                         FontSize="17"
                         Style="{StaticResource MenuButtonTheme}"
                         IsChecked="True"
                         Command="{Binding HomeViewCommand}"
                                 />

                    <RadioButton Content="Categories"
                         Height="50"
                         FontSize="17"
                         Style="{StaticResource MenuButtonTheme}"
                         Command="{Binding CategoriesViewCommand}"
                                 />

                    <RadioButton Content="Subscriptions"
                         Height="50"
                         FontSize="17"
                         Style="{StaticResource MenuButtonTheme}"
                         Command="{Binding SubscriptionViewCommand}"
                                 />
                </StackPanel>
            </Grid>

            <!-- Search bar -->
            <Border    Grid.Row="1"
                       Grid.Column="1"
                       Width="450"
                       Height="38"
                       HorizontalAlignment="Stretch"
                       CornerRadius="15"
                       BorderThickness="1.5"
                       BorderBrush="#9a9a9a"
                        Background="#252525"
                        Padding="12,0,0,0"
                       >
                <Grid 
                          >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"
                                          />
                        <ColumnDefinition Width="45"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0"  
                    VerticalContentAlignment="center"
                                BorderThickness="0"
                               Foreground="White"
                               Background="#252525"
                               FontSize="14"
                            />

                    <Button Grid.Column="1"
                                    Background="Transparent"
                                    Command="{Binding PodcastViewCommand}"
                                    BorderThickness="0"
                                    Style="{StaticResource ModernButton}"
                            Width="33"
                                    >
                        <Image Source="/Icons/SearchIcon.png"
                        Height="27"
                        Width="27"
                        />
                    </Button>


                </Grid>

            </Border>

            <!-- Content window -->
            <ContentControl Grid.Row="2"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"
                            />
        </Grid>
    </Border>
</Window>
