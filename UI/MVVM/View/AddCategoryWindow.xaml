<Window x:Class="UI.MVVM.View.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.MVVM.View"
        mc:Ignorable="d"
        Title="Mange podcast categories" Height="300" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#131313"
        Closing="Window_Closing"    
        >
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50">
        <ComboBox  Width="200" ItemsSource="{Binding Categories}"
          SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
          DisplayMemberPath="Name"
                       Foreground="Black"
                       Margin="0,0,0,20"
                   />

        <Button Content="Add Category" Style="{StaticResource ModernButton}" Command="{Binding AddCategoryCommand}" Height="35" Margin="0,10,0,0" Background="#252525" Foreground="White" BorderThickness="1" BorderBrush="#9a9a9a"/>
        <Button Content="Remove Category" Style="{StaticResource ModernButton}" Command="{Binding RemoveCategoryCommand}" Height="35" Margin="0,10,0,0" Background="#252525" Foreground="White" BorderThickness="1" BorderBrush="#9a9a9a"/>

    </StackPanel>
</Window>
